{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hbo-ict/actions": [
        "libs/lingo/actions/src/index.ts"
      ],
      "@hbo-ict/config": [
        "libs/shared/nest-app-config/src/index.ts"
      ],
      "@hbo-ict/data-access": [
        "libs/lingo/data-access/src/index.ts"
      ],
      "@hbo-ict/hooks": [
        "libs/lingo/data-hooks/src/index.ts"
      ],
      "@hbo-ict/lingo-prisma-client": [
        "libs/lingo/prisma-client/src/index.ts"
      ],
      "@hbo-ict/lingo-prisma-schema": [
        "libs/lingo/schema/"
      ],
      "@hbo-ict/lingo-utils": [
        "libs/lingo/utils/src/index.ts"
      ],
      "@hbo-ict/lingo/aggregators": [
        "libs/lingo/aggregators/ticket-aggregator/src/index.ts"
      ],
      "@hbo-ict/lingo/features/comment": [
        "libs/lingo/features/comment/src/index.ts"
      ],
      "@hbo-ict/lingo/features/component": [
        "libs/lingo/features/component/src/index.ts"
      ],
      "@hbo-ict/lingo/features/department": [
        "libs/lingo/features/department/src/index.ts"
      ],
      "@hbo-ict/lingo/features/employee": [
        "libs/lingo/features/employee/src/index.ts"
      ],
      "@hbo-ict/lingo/features/ticket": [
        "libs/lingo/features/ticket/src/index.ts"
      ],
      "@hbo-ict/lingo/features/ticketNumber": [
        "libs/lingo/features/ticket-number/src/index.ts"
      ],
      "@hbo-ict/lingo/types": [
        "libs/lingo/types/src/index.ts"
      ],
      "@hbo-ict/query-fns": [
        "libs/lingo/query-fns/src/index.ts"
      ],
      "@hbo-ict/supabase-auth": [
        "libs/lingo/auth/src/index.ts"
      ],
      "@hbo-ict/ui": [
        "libs/shared/ui/src/index.ts"
      ],
      "@hbo-ict/ui/server": [
        "libs/shared/ui/src/server.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
